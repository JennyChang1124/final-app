                            android:text="復誦句子"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                    </TableRow>
                    <TableRow>

                        <TextView
                            android:id="@+id/userAnswer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginStart="50dp"
