<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/table"
        android:layout_width="355dp"
        android:layout_height="822dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/table" />

    <Button
        android:id="@+id/btn_nextpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="285dp"
        android:background="#fff"
        android:text="下一頁"
        android:layout_marginTop="35dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/test_perform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/table"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="-150dp"
        android:text="測驗表現"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/table"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="-268dp"
        android:layout_marginStart="33dp"
        android:textSize="20dp"
        android:text="項目" />

    <TextView
        android:id="@+id/text_express"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="詞語表達"
        android:textSize="20dp"
        android:layout_marginStart="93dp"
        android:layout_marginBottom="-268dp"
        android:layout_above="@id/table" />

    <TextView
        android:id="@+id/text_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="口語描述"
        android:textSize="20dp"
        android:layout_marginStart="193dp"
        android:layout_marginBottom="-268dp"
        android:layout_above="@id/table"
        />

    <TextView
        android:id="@+id/text_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="復誦句子"
        android:textSize="20dp"
        android:layout_above="@id/table"
        android:layout_marginStart="293dp"
        android:layout_marginBottom="-268dp" />

    <TextView
        android:id="@+id/text_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="分數"
        android:gravity="center_horizontal"
        android:layout_above="@id/table"
        android:layout_marginStart="33dp"
        android:textSize="20dp"
        android:layout_marginBottom="-370dp" />

    <ImageView
        android:id="@+id/star1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_above="@id/table"
        android:layout_marginBottom="-700dp"
        android:layout_marginStart="72dp"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_above="@id/table"
        android:layout_marginBottom="-700dp"
        android:layout_marginStart="171dp"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_above="@id/table"
        android:layout_marginBottom="-700dp"
        android:layout_marginStart="274dp"
        app:srcCompat="@drawable/star" />


    <TextView
        android:id="@+id/text_commemt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="評語"
        android:gravity="center_horizontal"
        android:layout_above="@id/table"
        android:layout_marginStart="33dp"
        android:textSize="20dp"
        android:layout_marginBottom="-470dp" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/table"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-750dp"
        android:text="治療師:OOO"
        android:textAlignment="center"
        android:textSize="25dp" />




</RelativeLayout>
